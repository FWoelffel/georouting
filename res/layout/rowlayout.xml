<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:orientation="horizontal" android:minHeight="32dp"
              android:minWidth="32dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:orientation="vertical"
              android:layout_weight="2">

        <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@+id/name"
                android:textSize="45px" android:textStyle="bold" android:textIsSelectable="false"
                android:layout_margin="5dp">
        </TextView>
        <TextView
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@+id/description"
                android:textSize="30px" android:textIsSelectable="false"
                android:layout_margin="5dp" android:textStyle="normal">
        </TextView>

    </LinearLayout>
    <ImageView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online" android:layout_weight="1" android:maxWidth="32dp"
            android:maxHeight="32dp" android:minHeight="32dp" android:minWidth="32dp"
            android:layout_gravity="center_vertical" android:layout_margin="5dp"/>
</LinearLayout>
